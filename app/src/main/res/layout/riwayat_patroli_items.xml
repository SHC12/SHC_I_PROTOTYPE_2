<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_item_patroli_click"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_kode_patroli"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:text="Kode"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt_tanggal_patroli"
        android:layout_width="120dp"
        android:text="Tanggal"
        android:layout_toRightOf="@id/txt_kode_patroli"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txt_sf_patroli"
        android:layout_width="90dp"
        android:layout_toRightOf="@id/txt_tanggal_patroli"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:text="SF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_sp_patroli"
        android:layout_width="90dp"
        android:layout_toRightOf="@id/txt_sf_patroli"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:text="SP"
        android:textSize="12sp" />



</RelativeLayout>